{
    "configurations": [
        {
            "name": "Debugger",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "doppler",
            "runtimeArgs": ["run", "--", "npm", "run", "dev"]
        },
        {
            "name": "Unit debugger",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "doppler",
            "runtimeArgs": [
                "run",
                "--",
                "${workspaceFolder}/node_modules/.bin/ts-node",
                "${workspaceFolder}/debug/index.ts"
            ]
        },
        {
            "name": "Jest debugger",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test"]
        }
    ]
}
