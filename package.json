{
    "name": "thingst",
    "version": "0.4.0",
    "description": "A little store of things âœ¨",
    "main": "src/index.ts",
    "scripts": {
        "husky:clean": "rm -rf .husky",
        "husky:lint": "npx husky add .husky/prepare-commit-msg 'npx --no-install commitlint --edit \"$1\"'",
        "husky:format": "npx husky add .husky/prepare-commit-msg 'npx devmoji -e --lint'",
        "husky:init": "npm run husky:clean && husky install && npm run husky:lint && npm run husky:format",
        "init": "npm install && npm run husky:init",
        "serve": "babel-node ./src/index",
        "dev": "pm2-dev start npm -- run serve",
        "test": "NODE_ENV=test jest test/index.test.js --forceExit",
        "prebuild": "rm -rf ./dist",
        "build": "babel ./src -d ./dist --ignore node_modules,test",
        "preinstall": "npm install pm2",
        "start": "pm2-runtime start ./dist/index.js"
    },
    "dependencies": {
        "@babel/runtime": "^7.15.4",
        "chalk": "^4.1.2",
        "express": "^4.17.1",
        "pg": "^8.7.1",
        "pg-format": "^1.0.4",
        "pm2": "^5.1.2",
        "@prisma/client": "3.7.0",
        "cors": "2.8.5",
        "docsify": "^4.11.4",
        "joi": "17.4.2",
        "module-alias": "2.2.2",
        "swagger-jsdoc": "6.1.0",
        "swagger-ui-express": "4.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/core": "^7.15.5",
        "@babel/node": "^7.15.8",
        "@babel/plugin-transform-runtime": "^7.15.8",
        "@babel/preset-env": "^7.15.8",
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^13.2.0",
        "dotenv": "^10.0.0",
        "husky": "^7.0.2",
        "jest": "^27.2.4",
        "supertest": "^6.1.6",   
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "27.0.3",
        "@types/module-alias": "^2.0.1",
        "@types/node": "16.11.11",
        "@types/pg": "^8.6.5",
        "@types/supertest": "2.0.11",
        "@types/swagger-jsdoc": "6.0.1",
        "@types/swagger-ui-express": "4.1.3",
        "dotenv-expand": "5.1.0",
        "nodemon": "^2.0.20",
        "prisma": "3.7.0",
        "ts-jest": "27.1.0",
        "ts-node": "10.4.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/roremdev/thingst.git"
    },
    "keywords": [
        "NodeJS",
        "ExpressJS",
        "TypeScript",
        "Docker",
        "Prisma",
        "PostgreSQL"
    ],
    "author": "@roremDev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/roremdev/thingst/issues"
    },
    "homepage": "https://thingst.herokuapp.com/",
    "config": {
        "env": {
            "PORT": "Connection port of server",
            "MODE": "Mode of runtime"
        },
        "directories": {
            "dist": "Boundle generated by babel",
            "src": "Source code base",
            "src/config": "Environment variables",
            "src/libs": "drivers connection directory",
            "src/routes": "Endpoints definition",
            "src/services": "controller directory",
            "doc": "documentation directory [ Docsify ]",
            "middlewares": "express middlewares handlers",
            "test": "testing directory [ Jest, Supertest ]",
            "utils": "other tools"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@middlewares": "./src/middlewares",
        "@routes": "./src/routes",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-case": [
                2,
                "always",
                "lower-case"
            ],
            "type-empty": [
                2,
                "never"
            ],
            "scope-empty": [
                0
            ],
            "subject-case": [
                2,
                "always",
                "lower-case"
            ],
            "subject-empty": [
                2,
                "never"
            ],
            "subject-full-stop": [
                2,
                "never",
                "."
            ]
        }
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "no-console": "off"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            "@babel/plugin-transform-runtime"
        ]
    }
}
