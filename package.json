{
    "name": "thingst",
    "version": "0.5.0",
    "description": "A little store of things âœ¨",
    "main": "src/index.ts",
    "scripts": {
        "doc": "docsify serve ./docs --port 3001",
        "test": "jest",
        "dev": "nodemon ./src/index",
        "prebuild": "rm -rf dist",
        "build": "tsc",
        "prestart": "npm ci",
        "start": "node src/index.js"
    },
    "dependencies": {
        "@prisma/client": "3.7.0",
        "apollo-server": "^3.6.1",
        "cors": "2.8.5",
        "docsify": "4.12.1",
        "dotenv": "10.0.0",
        "dotenv-expand": "5.1.0",
        "express": "4.17.1",
        "graphql": "^16.2.0",
        "joi": "17.4.2",
        "module-alias": "2.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "16.0.0",
        "@commitlint/config-conventional": "16.0.0",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "27.0.3",
        "@types/node": "16.11.11",
        "@types/supertest": "2.0.11",
        "husky": "7.0.4",
        "jest": "27.4.3",
        "nodemon": "2.0.15",
        "prisma": "3.7.0",
        "supertest": "6.1.6",
        "ts-jest": "27.1.0",
        "ts-node": "10.4.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/roremdev/thingst.git"
    },
    "keywords": [
        "NodeJS",
        "TypeScript",
        "Docker",
        "Prisma",
        "PostgreSQL"
    ],
    "author": "@roremDev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/roremdev/thingst/issues"
    },
    "homepage": "https://thingst.herokuapp.com/",
    "config": {
        "env": {
            "PORT": "Connection port of server",
            "MODE": "Mode of runtime",
            "DOMAIN": "Scope of server"
        },
        "directories": {
            "dist": "Boundle generated by babel",
            "docs": "documentation directory [ Docsify ]",
            "src/config": "Environment variables",
            "src/controllers": "Business logic",
            "src/grapql": "GraphQL context",
            "src/utils": "other tools",
            "test": "testing directory [ Jest, Supertest ]"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@middlewares": "./src/middlewares",
        "@routes": "./src/routes",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1",
            "@config/(.*)": "<rootDir>/src/config/$1",
            "@controllers/(.*)": "<rootDir>/src/controllers/$1",
            "@middlewares/(.*)": "<rootDir>/src/middlewares/$1",
            "@routes/(.*)": "<rootDir>/src/routes/$1",
            "@utils/(.*)": "<rootDir>/src/utils/$1",
            "@validators/(.*)": "<rootDir>/src/validators/$1"
        }
    },
    "prisma": {
        "schema": "./prisma/schema.prisma",
        "seed": "babel-node ./prisma/seed.js"
    }
}
