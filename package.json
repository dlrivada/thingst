{
    "name": "thingst",
    "version": "0.5.0",
    "description": "A little store of things âœ¨",
    "main": "src/index.ts",
    "scripts": {
        "db:start": "doppler run -- docker-compose up -d",
        "db:generate": "doppler run -- pnpx prismix && pnpx prisma format",
        "db:seed": "doppler run -- npx prisma db seed",
        "db:push": "doppler run -- npx prisma db push",
        "db:reset": "doppler run -- npx prisma migrate reset",
        "db:migrate": "doppler run -- npx prisma migrate dev --name",
        "db:deploy": "doppler run -- npx prisma migrate deploy",
        "doc": "docsify serve ./docs --port 3001",
        "test": "jest",
        "dev": "doppler run -- nodemon ./src/index",
        "prebuild": "rm -rf dist",
        "build": "tsc -p tsconfig.build.json",
        "prestart": "npm ci",
        "start": "node src/index.js"
    },
    "dependencies": {
        "@graphql-tools/schema": "8.3.1",
        "@prisma/client": "3.11.1",
        "apollo-server": "3.6.1",
        "cors": "2.8.5",
        "dayjs": "1.10.7",
        "docsify": "4.12.1",
        "dotenv": "10.0.0",
        "dotenv-expand": "5.1.0",
        "express": "4.17.1",
        "graphql": "16.2.0",
        "joi": "17.4.2",
        "lodash": "4.17.21",
        "module-alias": "2.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "16.0.0",
        "@commitlint/config-conventional": "16.0.0",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "27.0.3",
        "@types/lodash": "4.14.178",
        "@types/node": "16.11.11",
        "@types/supertest": "2.0.11",
        "apollo-server-errors": "3.3.1",
        "husky": "7.0.4",
        "jest": "27.4.3",
        "nodemon": "2.0.15",
        "prettier": "2.5.1",
        "prisma": "3.11.1",
        "prismix": "1.0.21",
        "supertest": "6.1.6",
        "ts-jest": "27.1.0",
        "ts-node": "10.4.0",
        "typescript": "4.6.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/roremdev/thingst.git"
    },
    "keywords": [
        "NodeJS",
        "TypeScript",
        "GraphQL",
        "Docker",
        "Prisma",
        "PostgreSQL"
    ],
    "author": "@roremDev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/roremdev/thingst/issues"
    },
    "homepage": "https://thingst.herokuapp.com/",
    "config": {
        "env": {
            "DOMAIN": "Domain of server",
            "MODE": "Mode of runtime",
            "PORT": "Connection port of server",
            "PG_SCOPE": "Environment variable for PostgreSQL",
            "MONGO_SCOPE": "Environment variable for MongoDB"
        },
        "directories": {
            "dist": "Boundle generated by Typescript",
            "debug": "Debug files scripts for Unit Tests",
            "docs": "Documentation directory [ Docsify ]",
            "markdown": "Files description repository",
            "src/config": "Environment variables",
            "src/db": "Database files scope",
            "src/libs": "drivers connection directory",
            "src/routes": "Endpoints definition",
            "src/services": "controller directory",
            "src/middlewares": "express middlewares handlers",
            "src/utils": "other tools",
            "src/validators": "other tools",
            "test": "testing directory [ Jest, Supertest ]"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@db": "./src/db",
        "@libs": "./src/libs",
        "@middlewares": "./src/middlewares",
        "@models": "./src/models",
        "@routes": "./src/routes",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1",
            "@config/(.*)": "<rootDir>/src/config/$1",
            "@controllers/(.*)": "<rootDir>/src/controllers/$1",
            "@db/(.*)": "<rootDir>/src/db/$1",
            "@libs/(.*)": "<rootDir>/src/libs/$1",
            "@middlewares/(.*)": "<rootDir>/src/middlewares/$1",
            "@models/(.*)": "<rootDir>/src/models/$1",
            "@routes/(.*)": "<rootDir>/src/routes/$1",
            "@utils/(.*)": "<rootDir>/src/utils/$1",
            "@validators/(.*)": "<rootDir>/src/validators/$1"
        }
    },
    "prisma": {
        "schema": "./src/db/schema.prisma",
        "seed": "ts-node ./src/db/index.seed.ts"
    }
}
